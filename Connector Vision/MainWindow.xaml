<Window x:Class="Connector_Vision.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connector Vision"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#1E1E2E">
            <StackPanel>
                <TextBlock Text="Connector" FontSize="22" FontWeight="Bold"
                           Foreground="#8888CC" HorizontalAlignment="Center" Margin="0,15,0,0"/>
                <TextBlock Text="Vision" FontSize="14"
                           Foreground="#AAAACC" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                <TextBlock x:Name="TxtCurrentModel" Text="" FontSize="11"
                           Foreground="#CCCC88" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                <Rectangle Height="1" Fill="#3D3D5C" Margin="10,0,10,10"/>
                <Button x:Name="BtnTest" Content="Test" Style="{StaticResource NavButtonActive}"
                        Click="BtnTest_Click"/>
                <Button x:Name="BtnModel" Content="Model" Style="{StaticResource NavButton}"
                        Click="BtnModel_Click"/>
                <Button x:Name="BtnSetting" Content="Setting" Style="{StaticResource NavButton}"
                        Click="BtnSetting_Click"/>
                <Button x:Name="BtnManual" Content="Manual" Style="{StaticResource NavButton}"
                        Click="BtnManual_Click"/>
            </StackPanel>
        </Border>

        <!-- Content Frame -->
        <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden" Background="#1A1A2E"/>
    </Grid>
</Window>
