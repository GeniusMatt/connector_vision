<Page x:Class="Connector_Vision.Pages.ManualPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#1A1A2E">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 4 diagnostic views in 2x2 grid -->
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Top-Left: Original + Lines Overlay -->
            <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource DarkPanel}" Margin="0,0,5,5" ClipToBounds="True">
                <Grid>
                    <Image x:Name="ImgOriginal" Stretch="Uniform"/>
                    <TextBlock Text="Original + Lines" Foreground="#888899" FontSize="11"
                               VerticalAlignment="Top" HorizontalAlignment="Left" Margin="4,4,0,0"/>
                </Grid>
            </Border>

            <!-- Top-Right: Grayscale + Gap Regions -->
            <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource DarkPanel}" Margin="5,0,0,5" ClipToBounds="True">
                <Grid>
                    <Image x:Name="ImgGrayscale" Stretch="Uniform"/>
                    <TextBlock Text="Grayscale" Foreground="#888899" FontSize="11"
                               VerticalAlignment="Top" HorizontalAlignment="Left" Margin="4,4,0,0"/>
                </Grid>
            </Border>

            <!-- Bottom-Left: Intensity Profiles -->
            <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource DarkPanel}" Margin="0,5,5,0" ClipToBounds="True">
                <Grid>
                    <Image x:Name="ImgProfiles" Stretch="Uniform"/>
                    <TextBlock Text="Intensity Profiles" Foreground="#888899" FontSize="11"
                               VerticalAlignment="Top" HorizontalAlignment="Left" Margin="4,4,0,0"/>
                </Grid>
            </Border>

            <!-- Bottom-Right: Binary Threshold -->
            <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource DarkPanel}" Margin="5,5,0,0" ClipToBounds="True">
                <Grid>
                    <Image x:Name="ImgThreshold" Stretch="Uniform"/>
                    <TextBlock Text="Edge View" Foreground="#888899" FontSize="11"
                               VerticalAlignment="Top" HorizontalAlignment="Left" Margin="4,4,0,0"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Bottom: Controls -->
        <Border Grid.Row="1" Style="{StaticResource DarkPanel}" Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="Edge Threshold:" Style="{StaticResource ParamLabel}" Margin="0,0,8,0"/>
                    <Slider x:Name="SliderThreshold" Width="150" Minimum="1" Maximum="255" Value="80"
                            IsSnapToTickEnabled="True" TickFrequency="1" VerticalAlignment="Center"
                            ValueChanged="SliderThreshold_Changed"/>
                    <TextBlock Text="{Binding Value, ElementName=SliderThreshold, StringFormat={}{0:F0}}"
                               Style="{StaticResource ParamLabel}" Margin="8,0,0,0" MinWidth="30"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="Min Width:" Style="{StaticResource ParamLabel}" Margin="0,0,4,0"/>
                    <TextBox x:Name="TxtMinWidth" Width="50" Height="24" VerticalContentAlignment="Center"
                             FontSize="12" Foreground="White" Background="#2D2D3D" BorderBrush="#3D3D5C"
                             LostFocus="TxtGapWidth_LostFocus" KeyDown="TxtGapWidth_KeyDown"/>
                    <TextBlock Text="Max Width:" Style="{StaticResource ParamLabel}" Margin="10,0,4,0"/>
                    <TextBox x:Name="TxtMaxWidth" Width="50" Height="24" VerticalContentAlignment="Center"
                             FontSize="12" Foreground="White" Background="#2D2D3D" BorderBrush="#3D3D5C"
                             LostFocus="TxtGapWidth_LostFocus" KeyDown="TxtGapWidth_KeyDown"/>
                </StackPanel>

                <TextBlock x:Name="TxtDiagInfo" Grid.Column="2"
                           Text="Click 'Run Once' or 'Live' to inspect"
                           Foreground="#AAAACC" FontSize="12" VerticalAlignment="Center"/>

                <Button x:Name="BtnRunOnce" Grid.Column="3" Content="Run Once" Style="{StaticResource DarkButton}"
                        Click="BtnRunOnce_Click" Margin="0,0,8,0"/>
                <Button x:Name="BtnLive" Grid.Column="4" Content="Live" Style="{StaticResource AccentButton}"
                        Click="BtnLive_Click"/>
            </Grid>
        </Border>
    </Grid>
</Page>
